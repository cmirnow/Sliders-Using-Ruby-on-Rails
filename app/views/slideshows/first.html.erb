<div class="alert alert-primary alert-dismissible fade show" role="alert">
  <strong>Slider 1</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div id="slider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <% 7.times do |i| %>
            <li data-target="#slider" data-slide-to="<%= i %>" class="<%= " active " if i == 0 %>"></li>
        <% end %>
    </ol>
    <div class="carousel-inner">
        <% @result.each_with_index do |r,index| %>
            <div class="carousel-item<%= ' active' if index == 0 %>"><img class="img-fluid" src="/images/slides1/<%= r %>">
            </div>
        <% end %>
    </div>
    <% @prev_next.each do |s| %>
      <a class="carousel-control-<%= s %>" href="#slider" role="button" data-slide="<%= s %>">
      <span class="carousel-control-<%= s %>-icon"></span>
      </a>
    <% end %>
</div>
